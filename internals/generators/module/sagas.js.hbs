// @flow
import { takeLatest, put } from 'redux-saga/effects';
import type { Saga } from 'redux-saga';

import * as actions from './actions.{{camelCase name}}';
import * as types from './actionTypes.{{camelCase name}}';
{{#if wantApi}}
// import * as services from './services.{{camelCase name}}';
{{/if}}

function* simpleSaga(): Saga<*> {
  yield put(actions.defaultAction());
}

// All sagas to be loaded
export default function* (): Saga<*> {
  yield takeLatest(types.DEFAULT_ACTION, simpleSaga);
}
